{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    "dialog:default",
    "fs:allow-app-write",
    "fs:allow-app-read",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": true,
          "name": "bin/plugin-manager",
          "sidecar": true
        }
      ]
    },
    "shell:default",
    "core:window:allow-show"
  ]
}
